# ---- Root ignores for PPK Services monorepo ----

# OS/editor junk
.DS_Store
Thumbs.db
.vscode/
.idea/

# Docker artifacts (if any local bind mounts pop up)
docker-data/
tmp/

# Logs
*.log
logs/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# --- Frontend (Vite React) ---
frontend/node_modules/
frontend/dist/
frontend/.env
frontend/.env.local
frontend/.cache/
frontend/.parcel-cache/

# --- Backend (Laravel) ---
backend/vendor/
backend/node_modules/
backend/.env
backend/.env.backup
backend/storage/*.key

# Laravel runtime dirs (keep directories, ignore contents except .gitignore placeholders)
backend/storage/*
!backend/storage/app/
!backend/storage/framework/
!backend/storage/logs/
backend/storage/app/*
backend/storage/framework/cache/*
backend/storage/framework/sessions/*
backend/storage/framework/views/*
backend/storage/logs/*

# Framework cache
backend/bootstrap/cache/*
